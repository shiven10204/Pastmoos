<script>
    function prodcatst(){
sessionStorage.setItem('productcat', 'sticker');
window.location.href="listing-page.html";

}
function prodcatpos(){
sessionStorage.setItem('productcat', 'poster');
window.location.href="listing-page.html";

}
  // Place your config here
  var firebaseConfig = {
    apiKey: "AIzaSyBQ75mL_tGG7DHgjh3u0_n_m-H6i3Qg_xM",
authDomain: "test-pastmoos.firebaseapp.com",
databaseURL: "https://test-pastmoos-default-rtdb.firebaseio.com",
projectId: "test-pastmoos",
storageBucket: "test-pastmoos.appspot.com",
messagingSenderId: "130244640247",
appId: "1:130244640247:web:62192c97a93d81ba95c2f2",
measurementId: "G-XFD7NKTDZV"
  };

  firebase.initializeApp(firebaseConfig);

  const loginButtonnav = document.getElementById("logbtn-nav");

 
  firebase.auth().onAuthStateChanged(function(user) {
    if (user) {
      document.getElementById('logbtn-nav').textContent= user.phoneNumber;
      document.getElementById('logbtnc-nav').style.display="none";

      

      ;
      sessionStorage.setItem('userloggedin', user.phoneNumber)
    } else {
      // No user is signed in.
      console.log("USER NOT LOGGED IN");
      document.getElementById('logout-button-nav').style.display="none";
      document.getElementById('cartbtn-nav').style.display="none";
      document.getElementById('logbtn-nav').style.display="none";
      document.getElementsByClassName('logbtnc-nav').style.display="inline-block";



      

      loginButtonnav.addEventListener("click", function() {
window.location.href = 'login.html';


      });
      document.getElementById('logbtnc-nav').addEventListener("click", function() {
window.location.href = 'login.html';


      });

    }
  });

  const logoutButtonnav = document.getElementById("logout-button-nav");

logoutButtonnav.addEventListener("click", function() {
firebase.auth().signOut().then(function() {
// Sign-out successful.
console.log("User logged out successfully");
window.location.href = 'index.html';

}).catch(function(error) {
// An error happened.
console.error("Error logging out user:", error);
});
});
